DEPTH                 = ../../..
topsrcdir             = @top_srcdir@
srcdir                = @srcdir@
VPATH                 = @srcdir@

include $(DEPTH)/config/autoconf.mk

IS_COMPONENT          = 1
MODULE                = zipwriter
LIBRARY_NAME          = ZipWriter

XPI_NAME              = zipwriter

REQUIRES = xpcom \
           string \
           necko \
           $(NULL)

CPPSRCS = nttZipOutputStream.cpp \
          nttZipWriter.cpp \
          ZipWriterModule.cpp \
          $(NULL)

include $(topsrcdir)/config/rules.mk

# Appears to only affect Windows. Link statically to msvcrt.
USE_STATIC_LIBS       = 1

# Link statically to libstdc++ on Linux
ifeq ($(OS_ARCH),Linux)
EXTRA_DSO_LDOPTS += -nodefaultlibs -Wl,-Bstatic -lstdc++ -Wl,-Bdynamic -lgcc_s -lc
endif

EXTRA_DSO_LDOPTS += $(XPCOM_GLUE_LDOPTS) \
                    $(NSPR_LIBS) \
                    $(NULL)
