<overlay id="NightlyMessengerOverlay"
                        xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
       
  <script type="application/x-javascript" src="messenger.js" />

  <toolbarpalette id="MailToolbarPalette">
    <toolbarbutton id="nightly-tester-enter"
            class="toolbarbutton-1"
            label="Insert Build ID"
            tooltiptext="Inserts the build identifier into the current text box."
            oncommand="nightly.insertTemplate('buildid');"/>
  </toolbarpalette>

	<menupopup id="menu_HelpPopup">
		<menuseparator insertbefore="menu_HelpAboutSeparator"/>
		<menuitem label="Copy Build ID" oncommand="nightly.copyTemplate('buildid');" insertbefore="menu_HelpAboutSeparator"/>
		<menuitem label="Insert Build ID" oncommand="nightly.insertTemplate('buildid');" insertbefore="menu_HelpAboutSeparator"/>
		<menuitem label="Launch Talkback" oncommand="nightly.launchTalkback();" insertbefore="menu_HelpAboutSeparator"/>
	</menupopup>

</overlay>
